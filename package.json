{
  "name": "@criipto/signatures",
  "version": "1.1.3",
  "private": false,
  "description": "A Node.js SDK for Criipto Signatures",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "codegen": "graphql-codegen",
    "test": "npm run test:unit && npm run test:integration",
    "test:integration": "npm run build && cp src/test/integration/sample.pdf dist/test/integration/sample.pdf && ava dist/test/integration/*.test.js --timeout=60s --verbose",
    "test:unit": "npm run build && ava dist/test/unit/*.test.js",
    "clean": "rm -rf dist/",
    "check": "tsc --noEmit",
    "build": "tsc",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/criipto/criipto-signatures-nodejs.git"
  },
  "keywords": [
    "criipto",
    "signatures",
    "pades",
    "mitid",
    "sebankid",
    "nobankid"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/criipto/criipto-signatures-nodejs/issues"
  },
  "homepage": "https://github.com/criipto/criipto-signatures-nodejs#readme",
  "devDependencies": {
    "@ava/typescript": "^4.0.0",
    "@graphql-codegen/cli": "^3.3.1",
    "@graphql-codegen/typescript": "^3.0.4",
    "@graphql-codegen/typescript-graphql-request": "^4.5.9",
    "@graphql-codegen/typescript-operations": "^3.0.4",
    "@tsconfig/node16": "^1.0.3",
    "ava": "^5.2.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "graphql": "^16.6.0",
    "graphql-request": "^4.0.0",
    "graphql-tag": "^2.12.6"
  },
  "ava": {
    "typescript": {
      "rewritePaths": {
        "test/": "dist/test/"
      },
      "compile": false
    }
  }
}
